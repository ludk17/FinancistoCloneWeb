

    <h1>Cuentas</h1>

    <a href="/account/create">Crear Cuenta</a>

    <table class="table">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Tipo</th>
                <th>Nombre</th>
                <th>Divisa</th>
                <th>Saldo</th>
            </tr>
        </thead>

        <tbody>
            @{
                List<Account> accounts = ((List<Account>)ViewBag.Accounts);
            }

            @for (int i = 0; i < accounts.Count; i++)
            {
                Account item = accounts[i];
                <tr>
                    <td></td>
                    <td>@item.Type</td>
                    <td>@item.Name</td>
                    <td>@item.Currency</td>
                    <td>@item.Amount S/.</td>
                </tr>
            }
        </tbody>
    </table>
